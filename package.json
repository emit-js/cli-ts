{
  "name": "@emit-js/cli",
  "version": "1.0.0",
  "description": "emit cli",
  "keywords": [
    "emit",
    "cli"
  ],
  "author": "emit <emit@emit-js.com>",
  "main": "dist/cli.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/emit-js/cli-ts.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/emit-js/cli-ts#readme",
  "scripts": {
    "fix": "npm run lint -- --fix",
    "lint": "eslint --ignore-path .gitignore --ext=js .",
    "pretty": "prettier --write **/*.css **/*.json **/*.md",
    "test": "jest",
    "build": "tsc",
    "docs": "typedoc --out docs --media media --theme markdown src/*.ts"
  },
  "dependencies": {
    "@emit-js/emit": "4.0.7",
    "@emit-js/log": "2.0.2",
    "find-up": "3.0.0",
    "fs-extra": "7.0.1",
    "getopts": "2.2.4",
    "glob": "7.1.3"
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "@types/node": "11.13.4",
    "@typescript-eslint/eslint-plugin": "1.6.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-prettier": "3.0.1",
    "husky": "1.3.1",
    "jest": "24.7.1",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4",
    "ts-jest": "24.0.2",
    "typedoc": "0.14.2",
    "typedoc-plugin-markdown": "1.2.0",
    "typescript": "3.4.3"
  },
  "prettier": {
    "printWidth": 60,
    "semi": false,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test && npm run docs && git add docs"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts}": [
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ]
  }
}
